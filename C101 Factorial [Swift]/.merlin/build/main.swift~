// Add your code below:

func factorial(n: Int) -> Int {
    print("Calculating factorial(\(n))")
    if n <= 1 {
        let answer = 1
        print("Terminal case, returning \(answer).")
        return 1
    }
    let answer = n * factorial(n: n - 1)
    
        print("Non-terminal case, returning \(answer).")
        return answer
}

print("The final result is: \(factorial(n:n)).")


